---
interface Props {
    isActive?: boolean;
    title?: string;
    class?: string;
    [x: string]: any;
}

const {
    isActive,
	title,
	class: className,
	...rest
} = Astro.props;

---

<div
	class:list={[
		'accordion',
		className,
        isActive ? 'is-active is-visible' : '',
	]}
    data-accordion
	{...rest}
>
    <button type="button" class="accordion__header" data-accordion-button aria-expanded={isActive ? true : false}>
        <span class="accordion__title" set:html={title}></span>
        <span class="accordion__icon"></span>
    </button>
    <div class="accordion__content" data-accordion-content>
        <div class="accordion__inner"><slot /></div>
    </div>
</div>


