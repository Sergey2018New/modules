---

import Icon from '@components/modules/Icon.astro';

interface Props {
    direction?: 'prev' | 'next';
    class?: string;
    [x: string]: any;
}

const {
	direction = 'prev',
	class: className,
	...rest
} = Astro.props;
---
<div
    class:list={
        [
            `swiper-button-${direction == 'next' ? 'next' : 'prev'}`,
            className
        ]
    }
    {...rest}
>
    <Icon name="arrow"></Icon>
</div>
