---
import Icon from '@components/modules/Icon.astro';

interface Props {
    type?: 'button' | 'submit' | 'link';
    size?: 'sm';
    style?: 'second';
    fill?: boolean;
    center?: boolean;
    href?: string;
    ariaLabel?: string;
    icon?: string;
    disabled?: boolean;
    textClass?: string;
    class?: string;
    [x: string]: any;
}

const {
    type = 'button',
    size,
    style,
    fill = false,
    center = false,
    href = '',
    ariaLabel,
    icon,
    disabled,
    direction,
    textClass,
    class: className,
    ...rest
} = Astro.props;

const ButtonEl = type === 'link' ? 'a' : 'button';
let buttonClass = 'ui-button';

const styles = {
  second: `${buttonClass}_second`,
};

const sizes = {
  sm: `${buttonClass}_size_sm`,
};

const classList =[
    buttonClass,
    styles[style],
    sizes[size],
    fill ? `${buttonClass}_fill`: '',
    center ? `${buttonClass}_center`: '',
    className,
    disabled && type === 'link' ? 'is-disabled' : '',
]
---
<ButtonEl
    type={type !== 'link' ? type : null}
    href={type === 'link' ? href : null}
    class:list={classList}
    aria-label={ariaLabel}
    disabled={((type === 'submit' || type === 'button') && disabled) ? 'disabled' : null}
    tabindex={type === 'link' && disabled ? -1 : null}
    {...rest}
>
    {
        icon ? <Icon class={`${buttonClass}__icon`} name={icon}></Icon> : ''
    }

    <span class:list={[
        `${buttonClass}__text`,
        textClass
    ]}>
        <slot />
    </span>
</ButtonEl>
